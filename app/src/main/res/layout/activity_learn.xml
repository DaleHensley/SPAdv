<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="org.sil.storyproducer.controller.learn.LearnActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/learnImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:onClick="onClickPlayPauseButton"
            android:src="@drawable/ic_play_gray" />

        <SeekBar
            android:id="@+id/videoSeekBar"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="false"
            android:max="100" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="70dp">

            <ImageView
                android:id="@+id/soundOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_menu_play" />

            <Switch
                android:id="@+id/volumeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/soundOn"
                android:layout_toLeftOf="@+id/soundOff"
                android:layout_toStartOf="@+id/soundOff"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/soundOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/volumeSwitch"
                android:layout_toStartOf="@+id/volumeSwitch"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_no_audio" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fragment_draft_animated_toolbar"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:elevation="0dp"
        android:tint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@android:color/holo_blue_bright"
        app:fab_icon="@drawable/fab_add_xxhdpi"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        app:srcCompat="@android:drawable/ic_input_add" />

    <RelativeLayout
        android:id="@+id/fragment_draft_animated_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|end"
        android:background="@android:color/holo_blue_bright"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/fragment_draft_play_toolbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:background="@drawable/ic_play_arrow_white_48dp"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/fragment_draft_mic_toolbar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/fragment_draft_play_toolbar_button"
            android:layout_toRightOf="@+id/fragment_draft_play_toolbar_button"
            android:background="@drawable/ic_mic_white"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_mic_white" />
    </RelativeLayout>
</RelativeLayout>
