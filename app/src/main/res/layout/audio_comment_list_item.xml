<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/audio_comment_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:srcCompat="@drawable/ic_play_arrow_white_36dp"
        android:background="@color/black"
        android:layout_weight="0"
        android:contentDescription="@string/play" />

    <TextView
        android:id="@+id/audio_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_body"
        android:text="Fill with Audio Comment"
        android:layout_margin="2dp"
        android:lines="2"
        android:layout_weight="1"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/audio_comment_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:srcCompat="@drawable/ic_delete_forever_white_36dp"
        android:background="@color/black"
        android:layout_weight="0"
        android:contentDescription="@string/delete" />

</LinearLayout>