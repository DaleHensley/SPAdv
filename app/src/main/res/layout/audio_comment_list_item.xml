<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp">

    <Button
        android:id="@+id/audio_comment_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Play"/>

    <TextView
        android:id="@+id/audio_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title"
        android:text="Audio Comment"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/audio_comment_play_button"
        android:layout_toEndOf="@+id/audio_comment_play_button"/>

    <Button
        android:id="@+id/audio_comment_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="delete"
        android:layout_toRightOf="@+id/audio_comment_title"
        android:layout_toEndOf="@+id/audio_comment_title"/>

</RelativeLayout>