<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_dramatization_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="org.sil.storyproducer.controller.dramatization.DramatizationFrag">

    <RelativeLayout
        android:id="@+id/fragment_envelope"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fragment_image_envelope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_image_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="@string/story_picture" />

            <ImageView
                android:layout_width="@dimen/circle_diameter"
                android:layout_height="@dimen/circle_diameter"
                android:layout_alignBottom="@id/fragment_image_view"
                android:layout_alignStart="@id/fragment_image_view"
                android:background="@drawable/circle_bottom_left" />

            <ImageButton
                android:id="@+id/fragment_reference_audio_button"
                android:layout_width="@dimen/reference_audio_button"
                android:layout_height="@dimen/reference_audio_button"
                android:layout_alignStart="@+id/fragment_image_view"
                android:layout_alignBottom="@+id/fragment_image_view"
                android:background="@drawable/ic_menu_play"
                android:contentDescription="@string/draft_play_narration_audio" />

            <ImageView
                android:layout_width="@dimen/triangle_width"
                android:layout_height="@dimen/triangle_height"
                android:layout_alignBottom="@id/fragment_image_view"
                android:layout_alignEnd="@id/fragment_image_view"
                android:background="@drawable/triangle_background" />

            <TextView
                android:id="@+id/slide_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/fragment_image_view"
                android:layout_alignEnd="@id/fragment_image_view"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:text=""
                android:textSize="@dimen/text_body" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fragment_dramatization_edit_text_envelope"
            android:layout_below="@+id/fragment_image_envelope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/fragment_dramatization_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dramatization_edit_text_hint"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="20000"
                android:maxLines="10" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lock_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_semi_transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_lock_blue"
            android:contentDescription="@string/stage_locked" />
    </RelativeLayout>

</RelativeLayout>
