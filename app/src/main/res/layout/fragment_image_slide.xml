<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mr_root_relayout_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ImageSlideFrag">

    <ImageView
        android:id="@+id/fragment_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/story_picture"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_bottom_left"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_image_view"
        app:srcCompat="@drawable/circle_bottom_left" />

    <ImageButton
        android:id="@+id/fragment_reference_audio_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_play_arrow_white_36dp"
        android:contentDescription="@string/draft_play_narration_audio"
        android:src="@drawable/ic_play_arrow_white_36dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_image_view" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:background="@drawable/triangle_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_image_view" />

    <TextView
        android:id="@+id/slide_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text=""
        android:textSize="@dimen/text_body"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintRight_toRightOf="@+id/fragment_image_view" />

</android.support.constraint.ConstraintLayout>