<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mr_root_relayout_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/fragment_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/story_picture"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_bottom_left"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_image_view"
        app:srcCompat="@drawable/circle_bottom_left" />

    <ImageButton
        android:id="@+id/fragment_reference_audio_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_play_arrow_white_36dp"
        android:contentDescription="@string/draft_play_narration_audio"
        android:src="@drawable/ic_play_arrow_white_36dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_image_view" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:background="@drawable/triangle_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_image_view" />

    <TextView
        android:id="@+id/slide_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:text=""
        android:textSize="@dimen/text_body"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_image_view"
        app:layout_constraintRight_toRightOf="@+id/fragment_image_view" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <TextView
        android:id="@+id/fragment_reference_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        android:text=""
        android:textSize="@dimen/text_title"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/fragment_scripture_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_reference_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        android:text=""
        android:textSize="@dimen/text_body"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_reference_text"
        tools:ignore="HardcodedText" />

    <include
        android:id="@+id/toolbar_for_recording_toolbar"
        layout="@layout/toolbar_for_recording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fragment_image_view"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>